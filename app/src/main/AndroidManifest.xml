<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.purestation.widgetplusdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 데모 목록에 보이지 않도록 -->
            <meta-data
                android:name="isLaunchableActivity"
                android:value="false" />
        </activity>
        <activity
            android:name=".ProgressImageViewActivity"
            android:label="@string/progressImageViewDemo">
            <meta-data
                android:name="minVersion"
                android:value="10" />
            <meta-data
                android:name="isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name=".ServerConfigActivity"
            android:label="@string/serverSelectionViewDemo">
            <meta-data
                android:name="minVersion"
                android:value="10" />
            <meta-data
                android:name="isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name=".ClickableDrawableTextViewActivity"
            android:label="@string/clickableDrawableTextViewDemo">
            <meta-data
                android:name="minVersion"
                android:value="10" />
            <meta-data
                android:name="isLaunchableActivity"
                android:value="true" />
        </activity>
    </application>

</manifest>